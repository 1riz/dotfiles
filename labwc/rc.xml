<?xml version="1.0"?>

<labwc_config>

  <theme>
    <name>Adwaita-dark-maccish</name>
    <font name="DejaVuSans" size="11" />
    <titlebar><layout>close,iconify,max:</layout></titlebar>
    <cornerRadius>8</cornerRadius>
    <dropShadows>yes</dropShadows>
  </theme>

  <placement>
    <policy>cascade</policy>
    <cascadeOffset x="50" y="50" />
  </placement>

  <windowSwitcher show="no" preview="yes" outlines="no" allWorkspaces="no">
    <fields>
      <field content="icon" width="5%" />
      <field content="title" width="95%" />
    </fields>
  </windowSwitcher>

  <resistance>
    <screenEdgeStrength>50</screenEdgeStrength>
    <windowEdgeStrength>50</windowEdgeStrength>
    <unSnapThreshold>50</unSnapThreshold>
  </resistance>

  <focus>
    <followMouse>yes</followMouse>
    <followMouseRequiresMovement>yes</followMouseRequiresMovement>
    <raiseOnFocus>no</raiseOnFocus>
  </focus>

  <snapping>
    <range>0</range>
  </snapping>

  <desktops>
    <popupTime>0</popupTime>
    <names>
      <name>1</name>
      <name>2</name>
      <name>3</name>
      <name>4</name>
    </names>
  </desktops>

  <regions>
    <region name="top-left"     x="0%"  y="0%"  height="50%"  width="50%"  />
    <region name="top"          x="0%"  y="0%"  height="50%"  width="100%" />
    <region name="top-right"    x="50%" y="0%"  height="50%"  width="50%"  />
    <region name="left"         x="0%"  y="0%"  height="100%" width="50%"  />
    <region name="center"       x="15%" y="15%" height="75%"  width="75%"  />
    <region name="right"        x="50%" y="0%"  height="100%" width="50%"  />
    <region name="bottom-left"  x="0%"  y="50%" height="50%"  width="50%"  />
    <region name="bottom"       x="0%"  y="50%" height="50%"  width="100%" />
    <region name="bottom-right" x="50%" y="50%" height="50%"  width="50%"  />
  </regions>

  <keyboard>
    <numlock>on</numlock>
    <layoutScope>global</layoutScope>
    <repeatRate>25</repeatRate>
    <repeatDelay>600</repeatDelay>

    <!-- Basics -->
    <keybind key="W-Return">
      <action name="Execute" command="ghostty" />
    </keybind>
    <keybind key="W-C-Return">
      <action name="Execute" command="ghostty --gtk-single-instance=false --title=ghostty-fullscreen" />
    </keybind>
    <keybind key="W-S-Return">
      <action name="Execute" command="ghostty --gtk-single-instance=false --background-opacity=0.8" />
    </keybind>
    <keybind key="W-Space">
      <action name="Execute" command="rofi -show-icons -show apps" />
    </keybind>
    <keybind key="W-C-Space">
      <action name="Execute" command="rofi -show run" />
    </keybind>
    <keybind key="W-S-Space">
      <action name="Execute" command="rofi -show files" />
    </keybind>
    <keybind key="W-Tab">
      <action name="Execute" command="rofi -show-icons -modes window -show window" />
    </keybind>
    <keybind key="W-o">
      <action name="Execute" command="rofi -show-icons -modes filebrowser -show filebrowser" />
    </keybind>
    <keybind key="W-p">
      <action name="Execute" command="bash -c 'cliphist list | rofi -dmenu -display-columns 2 -p clipboard -i | cliphist decode | wl-copy'" />
    </keybind>
    <keybind key="W-n">
      <action name="Execute" command="thunar" />
    </keybind>
    <keybind key="W-i">
      <action name="Execute" command="/usr/lib/firefox/firefox" />
    </keybind>
    <keybind key="W-e">
      <action name="Execute" command="neovide --grid=162x65" />
    </keybind>
    <keybind key="W-l">
      <action name="Execute" command="swaylock" />
    </keybind>
    <keybind key="W-b">
      <action name="Execute" command="killall -SIGINT waybar" />
    </keybind>
    <keybind key="W-S-b">
      <action name="Execute" command="waybar" />
    </keybind>
    <keybind key="W-S-c">
      <action name="Reconfigure" />
    </keybind>
    <keybind key="W-S-e">
      <action name="Exit" />
    </keybind>

    <!-- Windows -->
    <keybind key="A-Tab">
      <action name="NextWindow" />
    </keybind>
    <keybind key="A-S-Tab">
      <action name="PreviousWindow" />
    </keybind>
    <keybind key="W-w">
      <action name="Close" />
    </keybind>
    <keybind key="W-a">
      <action name="ToggleMaximize" />
    </keybind>
    <keybind key="W-f">
      <action name="ToggleFullscreen" />
    </keybind>
    <keybind key="W-m">
      <action name="Iconify" />
    </keybind>
    <keybind key="W-x">
      <action name="ToggleDecorations" />
    </keybind>
    <keybind key="A-Space">
      <action name="ShowMenu" menu="client-menu" />
    </keybind>

    <keybind key="A-Left">
      <action name="MoveToEdge" direction="left" />
    </keybind>
    <keybind key="A-Right">
      <action name="MoveToEdge" direction="right" />
    </keybind>
    <keybind key="A-Up">
      <action name="MoveToEdge" direction="up" />
    </keybind>
    <keybind key="A-Down">
      <action name="MoveToEdge" direction="down" />
    </keybind>

    <keybind key="W-Left">
      <action name="ToggleSnapToEdge" direction="left" />
    </keybind>
    <keybind key="W-Right">
      <action name="ToggleSnapToEdge" direction="right" />
    </keybind>
    <keybind key="W-Up">
      <action name="ToggleSnapToEdge" direction="up" />
    </keybind>
    <keybind key="W-Down">
      <action name="ToggleSnapToEdge" direction="down" />
    </keybind>

    <keybind key="W-KP_7">
      <action name="SnapToRegion" region="top-left" />
    </keybind>
    <keybind key="W-KP_8">
      <action name="SnapToRegion" region="top" />
    </keybind>
    <keybind key="W-KP_9">
      <action name="SnapToRegion" region="top-right" />
    </keybind>
    <keybind key="W-KP_4">
      <action name="SnapToRegion" region="left" />
    </keybind>
    <keybind key="W-KP_5">
      <action name="SnapToRegion" region="center" />
    </keybind>
    <keybind key="W-KP_6">
      <action name="SnapToRegion" region="right" />
    </keybind>
    <keybind key="W-KP_1">
      <action name="SnapToRegion" region="bottom-left" />
    </keybind>
    <keybind key="W-KP_2">
      <action name="SnapToRegion" region="bottom" />
    </keybind>
    <keybind key="W-KP_3">
      <action name="SnapToRegion" region="bottom-right" />
    </keybind>

    <!-- Workspaces -->
    <keybind key="W-t">
      <action name="ToggleOmnipresent" />
    </keybind>
    <keybind key="W-Next">
      <action name="GoToDesktop" to="right" wrap="yes" />
    </keybind>
    <keybind key="W-Prior">
      <action name="GoToDesktop" to="left" wrap="yes" />
    </keybind>
    <keybind key="W-1">
      <action name="GoToDesktop" to="1" wrap="no" />
    </keybind>
    <keybind key="W-2">
      <action name="GoToDesktop" to="2" wrap="no" />
    </keybind>
    <keybind key="W-3">
      <action name="GoToDesktop" to="3" wrap="no" />
    </keybind>
    <keybind key="W-4">
      <action name="GoToDesktop" to="4" wrap="no" />
    </keybind>
    <keybind key="W-S-1">
      <action name="SendToDesktop" to="1" wrap="no" />
    </keybind>
    <keybind key="W-S-2">
      <action name="SendToDesktop" to="2" wrap="no" />
    </keybind>
    <keybind key="W-S-3">
      <action name="SendToDesktop" to="3" wrap="no" />
    </keybind>
    <keybind key="W-S-4">
      <action name="SendToDesktop" to="4" wrap="no" />
    </keybind>

    <!-- Function keys -->
    <keybind key="W-F1">
      <action name="Execute" command="wireplumber-mute-toggle" />
    </keybind>
    <keybind key="W-F2">
      <action name="Execute" command="wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-" />
    </keybind>
    <keybind key="W-F3">
      <action name="Execute" command="wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+" />
    </keybind>
    <keybind key="W-F4">
      <action name="Execute" command="playerctl play-pause" />
    </keybind>
    <keybind key="W-F5">
      <action name="Execute" command="playerctl previous" />
    </keybind>
    <keybind key="W-F6">
      <action name="Execute" command="playerctl next" />
    </keybind>
    <keybind key="W-F7">
      <action name="Execute" command="brightnessctl set 5%-" />
    </keybind>
    <keybind key="W-F8">
      <action name="Execute" command="brightnessctl set 5%+" />
    </keybind>

    <!-- Special keys -->
    <keybind key="XF86AudioMute">
      <action name="Execute" command="wireplumber-mute-toggle" />
    </keybind>
    <keybind key="XF86AudioLowerVolume">
      <action name="Execute" command="wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-" />
    </keybind>
    <keybind key="XF86AudioRaiseVolume">
      <action name="Execute" command="wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+" />
    </keybind>
    <keybind key="XF86AudioPlay">
      <action name="Execute" command="playerctl play-pause" />
    </keybind>
    <keybind key="XF86AudioPrev">
      <action name="Execute" command="playerctl previous" />
    </keybind>
    <keybind key="XF86AudioNext">
      <action name="Execute" command="playerctl next" />
    </keybind>
    <keybind key="XF86MonBrightnessDown">
      <action name="Execute" command="brightnessctl set 5%-" />
    </keybind>
    <keybind key="XF86MonBrightnessUp">
      <action name="Execute" command="brightnessctl set 5%+" />
    </keybind>
    <keybind key="XF86Display">
      <action name="ToggleFullscreen" />
    </keybind>

    <!-- Screenshots -->
    <keybind key="Print">
      <action name="Execute" command="grimshot --notify save screen" />
    </keybind>
    <keybind key="C-Print">
      <action name="Execute" command="grimpicker --copy --notify" />
    </keybind>
    <keybind key="S-Print">
      <action name="Execute" command="grimshot --notify save area" />
    </keybind>
    <keybind key="C-S-Print">
      <action name="Execute" command="grimshot --notify copy area" />
    </keybind>

    <!-- Notifications -->
    <keybind key="W-d">
      <action name="Execute" command="dunstctl close" />
    </keybind>
    <keybind key="W-S-d">
      <action name="Execute" command="dunstctl close-all" />
    </keybind>

    <!-- Wallpapers -->
    <keybind key="W-u">
      <action name="Execute" command="wpaperctl next eDP-1" />
    </keybind>
    <keybind key="W-y">
      <action name="Execute" command="wpaperctl next HDMI-A-1" />
    </keybind>
  </keyboard>

  <mouse>
    <default />
    <context name="Root">
      <mousebind button="Left" action="Press">
        <action name="Unfocus"/>
      </mousebind>
      <mousebind button="Right" action="Press">
        <action name="ShowMenu" menu="root-menu" />
      </mousebind>
      <mousebind button="Middle" action="Press">
        <action name="None" />
      </mousebind>
      <mousebind direction="Up" action="Scroll">
        <action name="None" />
      </mousebind>
      <mousebind direction="Down" action="Scroll">
        <action name="None" />
      </mousebind>
    </context>
  </mouse>

  <windowRules>
    <windowRule identifier="imv" serverDecoration="yes" />
    <windowRule title="ghostty-fullscreen">
      <action name="SetDecorations" decorations="none" />
      <action name="Maximize" />
    </windowRule>
    <windowRule identifier="firefox">
      <action name="ResizeTo" width="1300" height="900" />
    </windowRule>
    <windowRule identifier="neovide">
      <action name="MoveRelative" x="-600" y="0" />
    </windowRule>
    <windowRule identifier="com.mitchellh.ghostty" matchOnce="true">
      <action name="MoveRelative" x="665" y="260" />
    </windowRule>
  </windowRules>

</labwc_config>
