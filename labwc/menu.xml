<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu>

<menu id="root-menu">
  <item label="Run an application">
    <action name="Execute" command="rofi -show-icons -show apps" />
  </item>
  <item label="Switch between windows">
    <action name="Execute" command="rofi -show-icons -modes window -show window" />
  </item>
  <item label="Go to right desktop">
    <action name="GoToDesktop" to="right" wrap="yes" />
  </item>
  <item label="Go to left desktop">
    <action name="GoToDesktop" to="left" wrap="yes" />
  </item>
  <item label="Lock screen">
    <action name="Execute" command="swaylock" />
  </item>
  <item label="Restart">
    <action name="Reconfigure" />
  </item>
  <item label="Exit">
    <action name="Exit" />
  </item>
</menu>

</openbox_menu>
