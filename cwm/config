# borders
borderwidth 1
gap 1 1 1 1

# font
fontname "DejaVuSans:pixelsize=14:bold"

# colors
color activeborder "#0f096a"
color inactiveborder "#020149"
color menubg "#000014"
color menufg "#ffffff"
color font "#ffffff"

# groups
sticky yes

# decorations
ignore xclock

# tilling
htile 55
vtile 55

# key bindings (apps)
bind-key CM-Return alacritty
bind-key CM-Delete xlock
bind-key 4-Return alacritty
bind-key 4-f firefox
bind-key 4-n "alacritty -o window.dimensions.lines=70 -e nvim"
bind-key 4-v "alacritty -o window.dimensions.lines=70 -T vim -e vim"
bind-key 4-h "alacritty -o window.dimensions.lines=50 -T htop -e htop"
bind-key 4-t xterm
bind-key 4-c xclock
bind-key 4-l xlock
bind-key 4-e xeyes

# key bindings (windows)
bind-key 4-Up window-snap-up
bind-key 4-Down window-snap-down
bind-key 4-Right window-snap-right
bind-key 4-Left window-snap-left
bind-key 4C-Up window-htile
bind-key 4C-Left window-vtile

# key bindings (groups)
bind-key 4-1 group-only-1
bind-key 4-2 group-only-2
bind-key 4-3 group-only-3
bind-key 4-4 group-only-4

# Mouse bindings
unbind-mouse 1
bind-mouse 3 menu-window
bind-mouse M-2 window-lower
bind-mouse M-3 window-resize
