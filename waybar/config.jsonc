// -*- mode: jsonc -*-
[{
    "name": "bottom-bar",
    "layer": "bottom",
    "position": "bottom",
    "exclusive": false,
    "start_hidden": true,
    "width": 4,
    "spacing": 0,
    "margin-bottom": 4,
    "modules-left": [
        "image",
        "image#image2",
        "image#image3"
    ],
    "modules-center": [
        "wlr/taskbar"
    ],
    "image": {
        "path": ".local/share/icons/hicolor/128x128/apps/file-manager.png",
        "size": 48,
        "icon-size": 48,
        "on-click": "thunar"
    },
    "image#image2": {
        "path": ".local/share/icons/hicolor/128x128/apps/browser.png",
        "size": 48,
        "icon-size": 48,
        "on-click": "firefox"
    },
    "image#image3": {
        "path": ".local/share/icons/hicolor/128x128/apps/terminal.png",
        "size": 48,
        "icon-size": 48,
        "on-click": "ghostty"
    },
    "wlr/taskbar": {
        "format": "{icon}",
        "tooltip-format": "<span text_transform=\"lowercase\">{app_id}</span>: {title}",
        "markup": true,
        "icon-size": 48,
        "on-click": "minimize-raise",
        "on-click-middle": "close",
        "app_ids-mapping": {
            "com.mitchellh.ghostty": "ghostty",
            "org.pwmt.zathura": "zathura"
        }
    }
},
{
    "name": "top-bar",
    "layer": "top",
    "position": "top",
    "exclusive": true,
    "start_hidden": false,
    "height": 26,
    "spacing": 4,
    "modules-left": [
        "ext/workspaces"
    ],
    "modules-right": [
        "network",
        "cpu",
        "memory",
        "pulseaudio",
        "battery",
        "clock",
        "custom/dunst"
    ],
    "ext/workspaces": {
        "format": "{name}",
        "on-click": "activate",
        "sort-by-id": true
    },
    "custom/dunst": {
        "format": "",
        "tooltip-format": "Notifications",
        "on-click": "dunstctl history-pop",
        "on-click-right": "dunstctl close-all"
    },
    "clock": {
        "format": " {:%H:%M}",
        "tooltip-format": "<big>{:%Y-%m-%d}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "cpu": {
        "format": "{usage}%  ",
        "tooltip": true
    },
    "memory": {
        "format": "{}%   "
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}%  {icon}",
        "format-full": "{capacity}%  {icon}",
        "format-charging": "{capacity}%  ",
        "format-plugged": "{capacity}%  ",
        "format-icons": ["", "", "", "", ""]
    },
    "network": {
        "interface": "wlan0",
        "format-wifi": "{signalStrength}%  ",
        "format-ethernet": "{ipaddr}/{cidr}  ",
        "tooltip-format": "{essid}: {ipaddr}/{cidr}",
        "format-linked": "{ifname} (No IP)  ",
        "format-disconnected": "Disconnected  ⚠"
    },
    "pulseaudio": {
        "format": "{volume}%  {icon}",
        "format-muted": " ",
        "format-icons": {
            "headphone": "",
            "default": ["", "", ""]
        }
    }
}]
