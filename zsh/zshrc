export ZSH="$HOME/.oh-my-zsh"
export ZSHZ_DATA="$HOME/.zshz"

if [[ "${TERM}" =~ "alacritty|tmux" ]]; then
  ZSH_THEME="hyperzsh"
else
  ZSH_THEME="console"
fi

zstyle ':omz:update' mode disabled

plugins=(
  git
  fzf
  bat
  fp
  lsd
  pe
  z
)

source $ZSH/oh-my-zsh.sh

export EDITOR="nvim"
export PAGER="most"
export ZSH_THEME_TERM_TAB_TITLE_IDLE="zsh (%~)"
export ZSH_THEME_TERM_TITLE_IDLE=$ZSH_THEME_TERM_TAB_TITLE_IDLE
export MOST_INITFILE="$HOME/.config/most/mostrc"

alias v='nvim'
alias t='tmux -f ~/.config/tmux/tmux.conf new-session -A -s DEV'
alias n='nnn -dHQTv'
alias lx='lynx -cfg=~/.config/lynx/lynx.cfg'
alias sp='spotify_player'
alias ff='fastfetch'
alias cm='clipmenu'
alias root='su -l'
alias rbt='doas shutdown -r now'
alias off='doas shutdown -p now'
# alias root='sudo su -'
# alias rbt='sudo systemctl reboot'
# alias off='sudo systemctl poweroff'

if [[ -f ~/.zshrc.local ]]; then
  . ~/.zshrc.local
fi
