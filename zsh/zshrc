export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"
export ZSH="$HOME/.oh-my-zsh"
export ZSHZ_DATA="$HOME/.zshz"

if [[ "${TERM}" == "tmux" ]]; then
  ZSH_THEME="console"
else
  ZSH_THEME="hyperzsh"
fi

zstyle ':omz:update' mode disabled

plugins=(
  git
  fzf
  bat
  fp
  lsd
  pe
  z
)

source $ZSH/oh-my-zsh.sh

export EDITOR="nvim"
export PAGER="less"
export ZSH_THEME_TERM_TAB_TITLE_IDLE="zsh (%~)"
export ZSH_THEME_TERM_TITLE_IDLE=$ZSH_THEME_TERM_TAB_TITLE_IDLE

alias v='nvim'
alias t='tmux new-session -A -s DEV'
alias root='sudo su -'
alias lazygit='lazygit -ucd ~/.config/lazygit'
alias lg='lazygit'
alias ff='fastfetch'

if [[ -f ~/.zshrc.local ]]; then
  . ~/.zshrc.local
fi
