# Config for Sway

### General
xwayland disable

### Output configuration
output * bg ~/Pictures/Wallpapers/swaybg/wallpaper-001-1024x768-unix-logo-binary-blue.png fill #000000
output HDMI-A-1 resolution 2560x1440 position 0,0
output eDP-1 resolution 1920x1080 position 2560,0

### Idle configuration
exec swayidle -w timeout 600 swaylock

### Input configuration
input type:keyboard {
    xkb_layout "es"
    xkb_numlock enabled
    repeat_rate 50
    repeat_delay 300
}
seat seat0 hide_cursor 5000

### Windows configuration
font DejaVuSans 11
default_orientation horizontal
default_border pixel 2
default_floating_border pixel 2
gaps inner 6
gaps outer 6
smart_gaps on
smart_borders on
client.focused #0f096a #0f096a #ffffff #0f096a #0f096a
client.focused_inactive #020149 #020149 #ffffff #020149 #020149
client.focused_tab_title #020149 #020149 #ffffff #020149 #020149
client.unfocused #020149 #020149 #ffffff #020149 #020149
for_window [app_id="firefox" title="Library"] floating enable
for_window [app_id="firefox" title="About*"] floating enable
for_window [app_id="org.pulseaudio.pavucontrol"] floating enable
for_window [app_id="qalc"] floating enable
for_window [app_id="nnn"] floating enable
for_window [app_id="peaclock"] floating enable
for_window [app_id="qemu"] floating enable
for_window [app_id="dosbox"] floating enable
for_window [app_id="foot-term"] floating enable
for_window [title="btop-(.*)"] floating enable

### Workspaces configuration
workspace 1 output HDMI-A-1
workspace 2 output HDMI-A-1
workspace 3 output HDMI-A-1
workspace 4 output HDMI-A-1
workspace 5 output HDMI-A-1
workspace 6 output eDP-1
workspace 7 output eDP-1
workspace 8 output eDP-1
workspace 9 output eDP-1
workspace 10 output eDP-1

### Status bar
bar {
    position top
    status_command i3status-rs ~/.config/swaybar/i3status.toml
    font DejaVuSansMono, FontAwesome7Free 11px
    height 26
    status_padding 0
    workspace_min_width 32
    separator_symbol ""
    colors {
        separator #ffffff
        background #000125
        statusline #ffffff
        focused_workspace #0f096a #0f096a #ffffff
        active_workspace #020149 #020149 #ffffff
        inactive_workspace #000125 #000125 #ffffff
        urgent_workspace #4039aa #4039aa #ffffff
    }
}

### Clipboard history
exec wl-paste --watch cliphist store

### Key bindings

# Basics
    bindsym Super+d exec ~/.config/fuzzel/scripts/apps.sh list | fuzzel -d --with-nth=1 --accept-nth=2 | ~/.config/fuzzel/scripts/apps.sh
    bindsym Super+p exec cliphist list | fuzzel -d -p "clipboard " --with-nth=2 | cliphist decode | wl-copy
    bindsym Super+o exec ~/.config/fuzzel/scripts/files.sh list | fuzzel -d -p "files " --with-nth=1 --accept-nth=1 | ~/.config/fuzzel/scripts/files.sh
    bindsym Super+Tab exec ~/.config/fuzzel/scripts/windows.sh list | fuzzel -d -p "windows " --with-nth="{2..4}" --accept-nth=1 | ~/.config/fuzzel/scripts/windows.sh

    floating_modifier Super normal
    bindsym Super+Shift+c reload
    bindsym Super+Shift+q kill
    bindsym Super+Shift+e exec swaymsg exit
    bindsym Super+Escape exec swaylock

# Apps
    bindsym Super+Return exec foot
    bindsym Super+Shift+Return exec foot -o colors.alpha=0.8
    bindsym Super+Control+Return exec foot -a foot-term
    bindsym Super+n exec foot -c ~/.config/foot/foot_github.ini -a neovim -e nvim
    bindsym Super+i exec /usr/lib/firefox/firefox

# Moving around
    # Move your focus around
    bindsym Super+Left focus left
    bindsym Super+Down focus down
    bindsym Super+Up focus up
    bindsym Super+Right focus right

    # Move the focused window with the same, but add Shift
    bindsym Super+Shift+Left move left
    bindsym Super+Shift+Down move down
    bindsym Super+Shift+Up move up
    bindsym Super+Shift+Right move right

    # Swap position of the focused window
    bindsym Super+Control+Left mark --add "_swap", focus left, swap container with mark "_swap", unmark "_swap"
    bindsym Super+Control+Down mark --add "_swap", focus down, swap container with mark "_swap", unmark "_swap"
    bindsym Super+Control+Up mark --add "_swap", focus up, swap container with mark "_swap", unmark "_swap"
    bindsym Super+Control+Right mark --add "_swap", focus right, swap container with mark "_swap", unmark "_swap"

    # Move your focus around outputs
    bindsym Super+Period focus output left
    bindsym Super+Comma focus output right

# Resizing containers
    # Shrink the containers width and height
    bindsym Super+Alt+Left resize shrink width 10px
    bindsym Super+Alt+Down resize shrink height 10px

    # Grow the containers width and height
    bindsym Super+Alt+Right resize grow width 10px
    bindsym Super+Alt+Up resize grow height 10px

# Workspaces
    # Switch to workspace
    bindsym Super+1 workspace number 1
    bindsym Super+2 workspace number 2
    bindsym Super+3 workspace number 3
    bindsym Super+4 workspace number 4
    bindsym Super+5 workspace number 5
    bindsym Super+6 workspace number 6
    bindsym Super+7 workspace number 7
    bindsym Super+8 workspace number 8
    bindsym Super+9 workspace number 9
    bindsym Super+0 workspace number 10

    # Move focused container to workspace
    bindsym Super+Shift+1 move container to workspace number 1
    bindsym Super+Shift+2 move container to workspace number 2
    bindsym Super+Shift+3 move container to workspace number 3
    bindsym Super+Shift+4 move container to workspace number 4
    bindsym Super+Shift+5 move container to workspace number 5
    bindsym Super+Shift+6 move container to workspace number 6
    bindsym Super+Shift+7 move container to workspace number 7
    bindsym Super+Shift+8 move container to workspace number 8
    bindsym Super+Shift+9 move container to workspace number 9
    bindsym Super+Shift+0 move container to workspace number 10

    # Move around workspaces
    bindsym Super+Next workspace next_on_output
    bindsym Super+Prior workspace prev_on_output

# Layout stuff
    # Split the current object of your focus
    bindsym Super+b splith
    bindsym Super+v splitv

    # Switch the current container between different layout styles
    # bindsym Super+s layout stacking
    # bindsym Super+w layout tabbed
    bindsym Super+e layout toggle split

    # Make the current focus fullscreen
    bindsym Super+f fullscreen

    # Make the current focus sticky
    bindsym Super+t sticky toggle

    # Toggle the current focus between tiling and floating mode
    bindsym Super+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym Super+Shift+space focus mode_toggle

    # Move focus to the parent container
    # bindsym Super+a focus parent

# Scratchpad
    # Move the currently focused window to the scratchpad
    bindsym Super+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window
    bindsym Super+Shift+minus scratchpad show

# Utilities
    # Control pipewire audio volume with wpctl
    bindsym XF86AudioMute exec wireplumber-mute-toggle
    bindsym XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
    bindsym XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
    bindsym Super+F1 exec wireplumber-mute-toggle
    bindsym Super+F2 exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
    bindsym Super+F3 exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+

    # Control media players with playerctl
    bindsym XF86AudioPlay exec playerctl -a play-pause
    bindsym XF86AudioPrev exec playerctl -a previous
    bindsym XF86AudioNext exec playerctl -a next
    bindsym Super+F4 exec playerctl -a play-pause
    bindsym Super+F5 exec playerctl -a previous
    bindsym Super+F6 exec playerctl -a next

    # Control screen brightness with brightnessctl
    bindsym XF86MonBrightnessDown exec brightnessctl set 5%-
    bindsym XF86MonBrightnessUp exec brightnessctl set +5%
    bindsym Super+F7 exec brightnessctl set 5%-
    bindsym Super+F8 exec brightnessctl set +5%

    # Make screenshots and pick colors with grim and slurp
    bindsym Print exec grimshot --notify save screen
    bindsym Print+Shift exec grimshot --notify save area
    bindsym Print+Control exec grimshot --notify copy area
    bindsym Print+Alt exec grimpicker --copy --notify

    # Control notifications with dunstctl
    bindsym Super+z exec dunstctl close
    bindsym Super+Shift+z exec dunstctl close-all

# Saved sessions
    bindsym Super+Alt+1 \
        workspace number 5, exec foot, \
        workspace number 4, exec foot, \
        workspace number 3, exec foot, \
        workspace number 2, exec foot, \
        workspace number 1, exec foot

include /etc/sway/config.d/*
