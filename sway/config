# Config for Sway

### General
xwayland disable

### Output configuration
output * bg ~/Pictures/Wallpapers/swaybg/wallpaper-001-1024x768-unix-logo-binary-blue.png fill
output HDMI-A-1 resolution 2560x1440 position 0,0
output eDP-1 resolution 1920x1080 position 2560,0

### Idle configuration
exec swayidle -w timeout 600 swaylock

### Input configuration
input type:keyboard {
    xkb_layout "es"
    repeat_rate 50
    repeat_delay 300
}
seat seat0 hide_cursor 5000

### Windows configuration
font DejaVuSans 11
default_orientation horizontal
default_border pixel 2
default_floating_border pixel 2
gaps inner 6
gaps outer 6
smart_gaps on
smart_borders on
client.focused #0f096a #0f096a #ffffff #0f096a #0f096a
client.focused_inactive #020149 #020149 #ffffff #020149 #020149
client.focused_tab_title #020149 #020149 #ffffff #020149 #020149
client.unfocused #020149 #020149 #ffffff #020149 #020149
for_window [app_id="firefox" title="Library"] floating enable
for_window [app_id="firefox" title="About*"] floating enable
for_window [app_id="org.pulseaudio.pavucontrol"] floating enable
for_window [app_id="qalc"] floating enable
for_window [app_id="nnn"] floating enable
for_window [app_id="qemu"] floating enable
for_window [app_id="dosbox"] floating enable

### Workspaces configuration
workspace 1 output HDMI-A-1
workspace 2 output HDMI-A-1
workspace 3 output HDMI-A-1
workspace 4 output HDMI-A-1
workspace 5 output HDMI-A-1
workspace 6 output eDP-1
workspace 7 output eDP-1
workspace 8 output eDP-1
workspace 9 output eDP-1

### Status bar
bar {
    position top
    status_command i3status-rs ~/.config/swaybar/i3status.toml
    font DejaVuSansMono, FontAwesome7Free 11px
    height 26
    status_padding 0
    workspace_min_width 32
    separator_symbol ""
    colors {
        separator #ffffff
        background #000125
        statusline #ffffff
        focused_workspace #0f096a #0f096a #ffffff
        active_workspace #020149 #020149 #ffffff
        inactive_workspace #000125 #000125 #ffffff
        urgent_workspace #4039aa #4039aa #ffffff
    }
}

### Clipboard history
exec wl-paste --watch cliphist store

### Key bindings
set $mod Mod4

# Basics
    bindsym $mod+d exec ~/.config/fuzzel/scripts/apps.sh list | fuzzel -d --with-nth=1 --accept-nth=2 | ~/.config/fuzzel/scripts/apps.sh
    bindsym $mod+p exec cliphist list | fuzzel -d -p "clipboard " --with-nth=2 | cliphist decode | wl-copy
    bindsym $mod+o exec ~/.config/fuzzel/scripts/files.sh list | fuzzel -d -p "files " --with-nth=1 --accept-nth=1 | ~/.config/fuzzel/scripts/files.sh
    bindsym $mod+Tab exec ~/.config/fuzzel/scripts/windows.sh list | fuzzel -d -l 8 -p "windows " --with-nth="{2..4}" --accept-nth=1 | ~/.config/fuzzel/scripts/windows.sh

    floating_modifier $mod normal
    bindsym $mod+Shift+c reload
    bindsym $mod+Shift+q kill
    bindsym $mod+Shift+e exec swaymsg exit
    bindsym $mod+Escape exec swaylock

# Apps
    bindsym $mod+Return exec foot
    bindsym $mod+Shift+Return exec foot -o colors.alpha=0.8
    bindsym $mod+n exec foot -c ~/.config/foot/foot_github.ini -a neovim -e nvim
    bindsym $mod+i exec /usr/lib/firefox/firefox

# Moving around
    # Move your focus around
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    # Move the focused window with the same, but add Shift
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right

# Workspaces
    # Switch to workspace
    bindsym $mod+1 workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+3 workspace number 3
    bindsym $mod+4 workspace number 4
    bindsym $mod+5 workspace number 5
    bindsym $mod+6 workspace number 6
    bindsym $mod+7 workspace number 7
    bindsym $mod+8 workspace number 8
    bindsym $mod+9 workspace number 9
    # bindsym $mod+0 workspace number 10

    # Move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace number 1
    bindsym $mod+Shift+2 move container to workspace number 2
    bindsym $mod+Shift+3 move container to workspace number 3
    bindsym $mod+Shift+4 move container to workspace number 4
    bindsym $mod+Shift+5 move container to workspace number 5
    bindsym $mod+Shift+6 move container to workspace number 6
    bindsym $mod+Shift+7 move container to workspace number 7
    bindsym $mod+Shift+8 move container to workspace number 8
    bindsym $mod+Shift+9 move container to workspace number 9
    # bindsym $mod+Shift+0 move container to workspace number 10

    # Move around workspaces
    bindsym $mod+Next workspace next_on_output
    bindsym $mod+Prior workspace prev_on_output

# Layout stuff
    # Split the current object of your focus
    bindsym $mod+b splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles
    # bindsym $mod+s layout stacking
    # bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym $mod+a focus parent

# Scratchpad
    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window
    bindsym $mod+minus scratchpad show

# Resizing containers
mode "resize" {
    # left and down will shrink the containers width and height
    bindsym Left resize shrink width 10px
    bindsym Down resize shrink height 10px

    # right and up will grow the containers width and height
    bindsym Right resize grow width 10px
    bindsym Up resize grow height 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Utilities
    # Control pipewire audio volume with wpctl
    bindsym XF86AudioMute exec wireplumber-mute-toggle
    bindsym XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
    bindsym XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
    bindsym $mod+F1 exec wireplumber-mute-toggle
    bindsym $mod+F2 exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
    bindsym $mod+F3 exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+

    # Control media players with playerctl
    bindsym XF86AudioPlay exec playerctl -a play-pause
    bindsym XF86AudioPrev exec playerctl -a previous
    bindsym XF86AudioNext exec playerctl -a next
    bindsym $mod+F4 exec playerctl -a play-pause
    bindsym $mod+F5 exec playerctl -a previous
    bindsym $mod+F6 exec playerctl -a next

    # Control screen brightness with brightnessctl
    bindsym XF86MonBrightnessDown exec brightnessctl set 5%-
    bindsym XF86MonBrightnessUp exec brightnessctl set +5%
    bindsym $mod+F7 exec brightnessctl set 5%-
    bindsym $mod+F8 exec brightnessctl set +5%

    # Make screenshots and pick colors with grim
    bindsym Print exec grimshot --notify save screen
    bindsym Ctrl+Print exec grimpicker --copy --notify
    bindsym Shift+Print exec grimshot --notify save area
    bindsym Ctrl+Shift+Print exec grimshot --notify copy area

    # Control notifications with dunstctl
    bindsym $mod+z exec dunstctl close
    bindsym $mod+Shift+z exec dunstctl close-all

include /etc/sway/config.d/*
